# Development Profile Configuration
# Copy this file to application-dev.yml and update with your local settings

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/newsanalyzer_dev
    username: newsanalyzer
    password: changeme_dev_password
    hikari:
      maximum-pool-size: 10
      minimum-idle: 5

  jpa:
    hibernate:
      ddl-auto: validate  # Flyway handles schema
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.PostgreSQLDialect
        jdbc:
          batch_size: 20

  data:
    redis:
      host: localhost
      port: 6379
      password:
      timeout: 2000ms

  flyway:
    enabled: true
    baseline-on-migrate: true
    locations: classpath:db/migration

# Security
jwt:
  secret: dev_secret_key_change_in_production_at_least_256_bits_long
  expiration: 86400000  # 24 hours in milliseconds

# External Services
reasoning-service:
  base-url: http://localhost:8000
  timeout: 5000

# Logging
logging:
  level:
    org.newsanalyzer: DEBUG
    org.springframework.web: INFO
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
