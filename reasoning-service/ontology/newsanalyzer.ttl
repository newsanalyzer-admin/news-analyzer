@prefix : <http://newsanalyzer.org/ontology#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@base <http://newsanalyzer.org/ontology> .

<http://newsanalyzer.org/ontology> rdf:type owl:Ontology ;
    owl:imports <http://schema.org/> ;
    rdfs:label "NewsAnalyzer Ontology"@en ;
    rdfs:comment "Custom ontology for news entity analysis extending Schema.org"@en ;
    owl:versionInfo "2.0.0" .

#################################################################
#    Custom Classes - Government & Political Entities
#################################################################

###  http://newsanalyzer.org/ontology#LegislativeBody
:LegislativeBody rdf:type owl:Class ;
    rdfs:subClassOf schema:GovernmentOrganization ;
    rdfs:label "Legislative Body"@en ;
    rdfs:comment "A government organization that creates laws (Congress, Senate, Parliament)"@en .

###  http://newsanalyzer.org/ontology#ExecutiveAgency
:ExecutiveAgency rdf:type owl:Class ;
    rdfs:subClassOf schema:GovernmentOrganization ;
    rdfs:label "Executive Agency"@en ;
    rdfs:comment "A government agency that implements and enforces laws (EPA, FDA, DOJ)"@en .

###  http://newsanalyzer.org/ontology#JudicialBody
:JudicialBody rdf:type owl:Class ;
    rdfs:subClassOf schema:GovernmentOrganization ;
    rdfs:label "Judicial Body"@en ;
    rdfs:comment "A government organization that interprets laws (Supreme Court, District Courts)"@en .

###  http://newsanalyzer.org/ontology#Legislator
:Legislator rdf:type owl:Class ;
    rdfs:subClassOf schema:Person ;
    rdfs:label "Legislator"@en ;
    rdfs:comment "A person who is a member of a legislative body"@en .

###  http://newsanalyzer.org/ontology#PoliticalParty
:PoliticalParty rdf:type owl:Class ;
    rdfs:subClassOf schema:Organization ;
    rdfs:label "Political Party"@en ;
    rdfs:comment "An organization that participates in electoral politics"@en .

###  http://newsanalyzer.org/ontology#Legislation
:Legislation rdf:type owl:Class ;
    rdfs:subClassOf schema:CreativeWork ;
    rdfs:label "Legislation"@en ;
    rdfs:comment "A law, bill, or legislative act"@en .

###  http://newsanalyzer.org/ontology#NewsMedia
:NewsMedia rdf:type owl:Class ;
    rdfs:subClassOf schema:Organization ;
    rdfs:label "News Media"@en ;
    rdfs:comment "An organization that produces news content"@en .

#################################################################
#    Custom Properties
#################################################################

###  http://newsanalyzer.org/ontology#hasJurisdiction
:hasJurisdiction rdf:type owl:ObjectProperty ;
    rdfs:domain schema:GovernmentOrganization ;
    rdfs:range schema:Place ;
    rdfs:label "has jurisdiction"@en ;
    rdfs:comment "The geographic or administrative area over which an organization has authority"@en .

###  http://newsanalyzer.org/ontology#passedLegislation
:passedLegislation rdf:type owl:ObjectProperty ;
    rdfs:domain :LegislativeBody ;
    rdfs:range :Legislation ;
    rdfs:label "passed legislation"@en ;
    rdfs:comment "Legislation that was passed by a legislative body"@en .

###  http://newsanalyzer.org/ontology#sponsoredBy
:sponsoredBy rdf:type owl:ObjectProperty ;
    rdfs:domain :Legislation ;
    rdfs:range :Legislator ;
    rdfs:label "sponsored by"@en ;
    rdfs:comment "The legislator who sponsored the legislation"@en .

###  http://newsanalyzer.org/ontology#memberOf
:memberOf rdf:type owl:ObjectProperty ;
    rdfs:domain schema:Person ;
    rdfs:range :LegislativeBody ;
    rdfs:label "member of"@en ;
    rdfs:comment "Indicates membership in a legislative body"@en .

###  http://newsanalyzer.org/ontology#affiliatedWith
:affiliatedWith rdf:type owl:ObjectProperty ;
    rdfs:domain schema:Person ;
    rdfs:range :PoliticalParty ;
    rdfs:label "affiliated with"@en ;
    rdfs:comment "Political party affiliation"@en .

###  http://newsanalyzer.org/ontology#regulatedBy
:regulatedBy rdf:type owl:ObjectProperty ;
    rdfs:domain schema:Thing ;
    rdfs:range :ExecutiveAgency ;
    rdfs:label "regulated by"@en ;
    rdfs:comment "The executive agency that regulates this entity"@en .

###  http://newsanalyzer.org/ontology#reportedBy
:reportedBy rdf:type owl:ObjectProperty ;
    rdfs:domain schema:Event ;
    rdfs:range :NewsMedia ;
    rdfs:label "reported by"@en ;
    rdfs:comment "News media outlet that reported on this event"@en .

###  http://newsanalyzer.org/ontology#politicalOrientation
:politicalOrientation rdf:type owl:DatatypeProperty ;
    rdfs:domain [ rdf:type owl:Class ;
                  owl:unionOf ( schema:Person :PoliticalParty :NewsMedia )
                ] ;
    rdfs:range xsd:string ;
    rdfs:label "political orientation"@en ;
    rdfs:comment "Political ideology or orientation (liberal, conservative, etc.)"@en .

###  http://newsanalyzer.org/ontology#biasScore
:biasScore rdf:type owl:DatatypeProperty ;
    rdfs:domain :NewsMedia ;
    rdfs:range xsd:float ;
    rdfs:label "bias score"@en ;
    rdfs:comment "Numerical bias score from -1 (left) to +1 (right)"@en .

###  http://newsanalyzer.org/ontology#credibilityScore
:credibilityScore rdf:type owl:DatatypeProperty ;
    rdfs:domain :NewsMedia ;
    rdfs:range xsd:float ;
    rdfs:label "credibility score"@en ;
    rdfs:comment "Credibility rating from 0 (low) to 1 (high)"@en .

#################################################################
#    OWL Inference Rules (using OWL Restrictions)
#################################################################

###  Rule: Anyone who is memberOf a LegislativeBody is a Legislator
:LegislatorByMembership rdf:type owl:Class ;
    owl:equivalentClass [ rdf:type owl:Restriction ;
                          owl:onProperty :memberOf ;
                          owl:someValuesFrom :LegislativeBody
                        ] ;
    rdfs:subClassOf :Legislator .

###  Rule: Any organization with hasJurisdiction is a GovernmentOrganization
:GovernmentByJurisdiction rdf:type owl:Class ;
    owl:equivalentClass [ rdf:type owl:Restriction ;
                          owl:onProperty :hasJurisdiction ;
                          owl:someValuesFrom schema:Place
                        ] ;
    rdfs:subClassOf schema:GovernmentOrganization .

###  Rule: Any organization that passedLegislation is a LegislativeBody
:LegislativeBodyByAction rdf:type owl:Class ;
    owl:equivalentClass [ rdf:type owl:Restriction ;
                          owl:onProperty :passedLegislation ;
                          owl:someValuesFrom :Legislation
                        ] ;
    rdfs:subClassOf :LegislativeBody .

###  Rule: Any organization that regulatedBy points to is an ExecutiveAgency
:ExecutiveAgencyByRegulation rdf:type owl:Class ;
    owl:equivalentClass [ rdf:type owl:Restriction ;
                          owl:onProperty [ owl:inverseOf :regulatedBy ] ;
                          owl:someValuesFrom schema:Thing
                        ] ;
    rdfs:subClassOf :ExecutiveAgency .

#################################################################
#    Specific Entity Instances (Examples)
#################################################################

###  US Legislative Bodies
:USCongress rdf:type :LegislativeBody ;
    schema:name "United States Congress" ;
    :hasJurisdiction :USA .

:USSenate rdf:type :LegislativeBody ;
    schema:name "United States Senate" ;
    schema:parentOrganization :USCongress ;
    :hasJurisdiction :USA .

:USHouseOfRepresentatives rdf:type :LegislativeBody ;
    schema:name "United States House of Representatives" ;
    schema:parentOrganization :USCongress ;
    :hasJurisdiction :USA .

###  US Executive Agencies
:EPA rdf:type :ExecutiveAgency ;
    schema:name "Environmental Protection Agency" ;
    schema:alternateName "EPA" ;
    :hasJurisdiction :USA .

:FDA rdf:type :ExecutiveAgency ;
    schema:name "Food and Drug Administration" ;
    schema:alternateName "FDA" ;
    :hasJurisdiction :USA .

:DOJ rdf:type :ExecutiveAgency ;
    schema:name "Department of Justice" ;
    schema:alternateName "DOJ" ;
    :hasJurisdiction :USA .

###  Political Parties
:DemocraticParty rdf:type :PoliticalParty ;
    schema:name "Democratic Party" ;
    :politicalOrientation "center-left" .

:RepublicanParty rdf:type :PoliticalParty ;
    schema:name "Republican Party" ;
    :politicalOrientation "center-right" .

###  Places
:USA rdf:type schema:Country ;
    schema:name "United States of America" .

:WashingtonDC rdf:type schema:City ;
    schema:name "Washington, D.C." ;
    schema:containedInPlace :USA .

#################################################################
#    Consistency Constraints
#################################################################

###  A Legislator must be affiliated with at most one PoliticalParty
:Legislator rdfs:subClassOf [ rdf:type owl:Restriction ;
                               owl:onProperty :affiliatedWith ;
                               owl:maxCardinality "1"^^xsd:nonNegativeInteger
                             ] .

###  Bias score must be between -1 and 1
:NewsMedia rdfs:subClassOf [ rdf:type owl:Restriction ;
                             owl:onProperty :biasScore ;
                             owl:allValuesFrom [ rdf:type rdfs:Datatype ;
                                                owl:onDatatype xsd:float ;
                                                owl:withRestrictions ( [ xsd:minInclusive "-1.0"^^xsd:float ]
                                                                      [ xsd:maxInclusive "1.0"^^xsd:float ]
                                                                    )
                                              ]
                           ] .

###  Credibility score must be between 0 and 1
:NewsMedia rdfs:subClassOf [ rdf:type owl:Restriction ;
                             owl:onProperty :credibilityScore ;
                             owl:allValuesFrom [ rdf:type rdfs:Datatype ;
                                                owl:onDatatype xsd:float ;
                                                owl:withRestrictions ( [ xsd:minInclusive "0.0"^^xsd:float ]
                                                                      [ xsd:maxInclusive "1.0"^^xsd:float ]
                                                                    )
                                              ]
                           ] .
